{
    "name": "Java Development",
    "build": {
      "dockerfile": "Dockerfile",
      "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.shell.linux": "/bin/bash"
              },
              "extensions": [
                "vscjava.vscode-java-pack"
              ]
        }
    },
    "forwardPorts": [
      4000
    ],
    "postCreateCommand": "echo 'Container ready!'",
    "remoteUser": "root"
  }
  